<my:ComponentEditor x:Class="CircuitDiagram.EComponents.MeterEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="clr-namespace:CircuitDiagram"
             xmlns:myc="clr-namespace:CircuitDiagram.EComponents"
             x:TypeArguments="myc:Meter"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <GroupBox Header="Meter Type" Name="groupBox1">
            <StackPanel>
                <RadioButton Content="Ammeter" Height="16" Name="radAmmeter" Checked="RadioChecked" />
                <RadioButton Content="Voltmeter" Height="16" Name="radVoltmeter" Checked="RadioChecked" />
            </StackPanel>
        </GroupBox>
    </Grid>
</my:ComponentEditor>
