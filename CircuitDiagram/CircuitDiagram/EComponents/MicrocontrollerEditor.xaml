<my:ComponentEditor x:Class="CircuitDiagram.EComponents.MicrocontrollerEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="clr-namespace:CircuitDiagram"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Label Content="Number of inputs" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Number of outputs" Height="28" HorizontalAlignment="Left" Margin="12,46,0,0" Name="label2" VerticalAlignment="Top" />
        <TextBox Height="23" Margin="149,14,12,0" Name="tbxNumInputs" VerticalAlignment="Top" PreviewTextInput="OnPreviewTextInput" />
        <TextBox Height="23" Margin="149,48,12,0" Name="tbxNumOutputs" VerticalAlignment="Top" PreviewTextInput="OnPreviewTextInput" />
        <CheckBox Content="ADC Input" Height="16" HorizontalAlignment="Left" Margin="149,77,0,0" Name="chbADCInput" VerticalAlignment="Top" />
        <CheckBox Content="Display 'PIC'" Height="16" HorizontalAlignment="Left" Margin="149,99,0,0" Name="chbDisplayPIC" VerticalAlignment="Top" />
    </Grid>
</my:ComponentEditor>
