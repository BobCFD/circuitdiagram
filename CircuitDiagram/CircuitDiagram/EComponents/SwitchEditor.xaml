<my:ComponentEditor x:Class="CircuitDiagram.EComponents.SwitchEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:my="clr-namespace:CircuitDiagram"
             xmlns:myc="clr-namespace:CircuitDiagram.EComponents"
             x:TypeArguments="myc:Switch"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <GroupBox Header="Switch type">
            <StackPanel Name="stackPanel1">
                <RadioButton Content="Push" Height="16" Name="radPush" Checked="RadioChecked" />
                <RadioButton Content="Toggle" Height="16" Name="radToggle" Checked="RadioChecked" />
                <RadioButton Content="Analogue" Height="16" Name="radAnalogue" Checked="RadioChecked" />
            </StackPanel>
        </GroupBox>
    </Grid>
</my:ComponentEditor>
