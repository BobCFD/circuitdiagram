            <Rectangle Canvas.Left="46" Canvas.Top="266" Fill="#FF666666" Height="54" Stroke="{x:Null}" Width="378" />
            <Rectangle Canvas.Left="208" Canvas.Top="35" Fill="#FF666666" Height="275" Stroke="{x:Null}" Width="55" />
            <Rectangle Canvas.Left="45" Canvas.Top="369" Fill="#FF666666" Height="54" Stroke="{x:Null}" Width="378" />
            <Rectangle Canvas.Left="208" Canvas.Top="369" Fill="#FF666666" Height="285" Stroke="{x:Null}" Width="55" />
