<Window x:Class="CircuitDiagram.winAbout"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Circuit Diagram" Height="300" Width="446" ResizeMode="NoResize" ShowInTaskbar="False" WindowStartupLocation="CenterOwner">
    <Grid>
        <Button Content="Close" Margin="0,0,12,12" Name="button1" Height="23" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="button1_Click" />
        <StackPanel Margin="12,143,12,41" Name="stackPanel1">
            <StackPanel Orientation="Horizontal">
                <Label Content="Version:" Height="28" Name="label2" HorizontalAlignment="Left" />
                <Label Content="1.0" Height="28" Name="lblVersionNumber" HorizontalAlignment="Left" />
            </StackPanel>
            <Label Height="28" HorizontalAlignment="Left">
                <Hyperlink NavigateUri="http://circuitdiagram.codeplex.com/" RequestNavigate="Hyperlink_RequestNavigate">http://circuitdiagram.codeplex.com/</Hyperlink>
            </Label>
            <Label Content="Created by Sam Fisher" Height="28" Name="label3" HorizontalAlignment="Left" />
        </StackPanel>
        <Image Height="125" HorizontalAlignment="Left" SnapsToDevicePixels="True" Margin="12,12,0,0" Name="image1" Stretch="Uniform" VerticalAlignment="Top" Width="400" Source="/CircuitDiagram;component/AboutImage.png" />
    </Grid>
</Window>
